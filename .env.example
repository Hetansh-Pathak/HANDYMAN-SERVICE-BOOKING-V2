# MongoDB Configuration
# Use MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/database-name
# Or local MongoDB: mongodb://localhost:27017/database-name
NEXT_PUBLIC_MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/handyfix

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Supabase Configuration (Optional)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# JWT Secret for token generation
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Email Configuration (for notifications)
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway (Optional)
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
